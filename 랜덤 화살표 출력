#include <stdio.h>
#include <stdlib.h>
#include <windows.h>
#include <time.h>

#define height 140

void setConsoleSize() {
    // 콘솔 크기 설정 함수
}

void gotoxy(int x, int y) {
    // 커서 위치 설정 함수
}

int main() {
    setConsoleSize();
    srand(time(NULL));

    int key_max;
    int random;
    int columnArrows[4]; // 각 열에 현재 출력된 화살표의 방향

    for (int i = 0; i < 4; i++) {
        columnArrows[i] = rand() % 4; // 각 열에 초기 랜덤 화살표 설정
    }

    while (1) {
        system("cls");  // 각 프레임마다 콘솔을 지우기

        for (int col = 0; col < 4; col++) {
            gotoxy(col * 10 + 10, 0);

            // 현재 열에 있는 화살표 출력
            if (columnArrows[col] == 0) {
                printf("↑ "); // 위쪽 화살표
            }
            else if (columnArrows[col] == 1) {
                printf("↓ "); // 아래쪽 화살표
            }
            else if (columnArrows[col] == 2) {
                printf("→ "); // 오른쪽 화살표
            }
            else if (columnArrows[col] == 3) {
                printf("← "); // 왼쪽 화살표
            }

            // 새로운 랜덤 화살표로 업데이트
            columnArrows[col] = rand() % 4;
        }

        Sleep(500); 
    }

    return 0;
}
